---
import Layout from '../../layouts/Layout.astro';
import { blogPosts, getRelatedArticles, findPostBySlug } from '../../data/blogPosts';

export function getStaticPaths() {
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = findPostBySlug(slug as string);

if (!post) {
  return Astro.redirect('/404');
}

const formattedDate = new Date(post.publishDate).toLocaleDateString('id-ID', {
  day: '2-digit',
  month: 'long',
  year: 'numeric',
});

const relatedPosts = getRelatedArticles(slug as string);
const blogHref = (entrySlug: string) => `/blog/${entrySlug}/`;
const siteOrigin = 'https://my-aicustom.com';
const canonicalUrl = `${siteOrigin}/blog/${slug}/`;

// BlogPosting Schema for SEO
const blogPostSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.title,
  "description": post.excerpt,
  "image": post.heroImage,
  "datePublished": post.publishDate,
  "dateModified": post.publishDate,
  "author": {
    "@type": "Person",
    "name": post.author,
    "url": siteOrigin
  },
  "publisher": {
    "@type": "Organization",
    "name": "my-aicustom.com",
    "logo": {
      "@type": "ImageObject",
      "url": `${siteOrigin}/assets/og-default.svg`
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  },
  "articleSection": post.categoryLabel,
  "keywords": post.category,
  "wordCount": post.content.split(' ').length,
  "articleBody": post.content.replace(/<[^>]*>/g, '').substring(0, 500)
}, null, 2);

// Breadcrumb Schema
const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": siteOrigin
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": `${siteOrigin}/blog/`
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": post.title,
      "item": canonicalUrl
    }
  ]
}, null, 2);
---

<Layout
  title={`${post.title} - my-aicustom.com`}
  description={post.excerpt}
  keywords={`${post.category}, AI Indonesia, ${post.title}, AI custom`}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={blogPostSchema}></script>
    <script type="application/ld+json" set:html={breadcrumbSchema}></script>
  </Fragment>

  <!-- Hero Section with Breadcrumb -->
  <section class="relative bg-gradient-to-br from-slate-50 via-white to-slate-50 py-16 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950 lg:py-20">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8 flex items-center gap-2 text-sm text-slate-600 dark:text-slate-400" aria-label="Breadcrumb">
        <a href="/" class="transition hover:text-blue-600 dark:hover:text-blue-400">Home</a>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <a href="/blog/" class="transition hover:text-blue-600 dark:hover:text-blue-400">Blog</a>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <span class="font-medium text-slate-900 dark:text-white">{post.categoryLabel}</span>
      </nav>

      <!-- Category Badge -->
      <span class="inline-flex items-center rounded-full border border-slate-200 bg-white px-4 py-1.5 text-xs font-semibold uppercase tracking-[0.35em] text-slate-600 shadow-sm dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300">
        {post.categoryLabel}
      </span>

      <!-- Title -->
      <h1 class="mt-6 text-4xl font-bold leading-tight tracking-tight text-slate-900 dark:text-white sm:text-5xl lg:text-6xl">
        {post.title}
      </h1>

      <!-- Excerpt -->
      <p class="mt-6 text-xl leading-relaxed text-slate-600 dark:text-slate-300">
        {post.excerpt}
      </p>

      <!-- Meta Information -->
      <div class="mt-8 flex flex-wrap items-center gap-4 text-sm font-medium text-slate-500 dark:text-slate-400">
        <div class="flex items-center gap-2">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <time datetime={post.publishDate}>{formattedDate}</time>
        </div>
        <span class="hidden h-1.5 w-1.5 rounded-full bg-slate-400 sm:inline"></span>
        <div class="flex items-center gap-2">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>{post.readTime}</span>
        </div>
        <span class="hidden h-1.5 w-1.5 rounded-full bg-slate-400 sm:inline"></span>
        <div class="flex items-center gap-2">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span>Oleh {post.author}</span>
        </div>
      </div>
    </div>

    <!-- Hero Image with Enhanced Styling -->
    <div class="mx-auto mt-12 max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="overflow-hidden rounded-3xl shadow-2xl ring-1 ring-slate-200 dark:ring-slate-800 lg:rounded-[3rem]">
        <img
          src={post.heroImage}
          alt={post.title}
          class="h-full w-full object-cover"
          loading="eager"
          width="1200"
          height="630"
        />
      </div>
    </div>
  </section>

  <!-- Article Content with Enhanced Typography -->
  <section class="bg-white py-16 dark:bg-slate-950 lg:py-24">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <article class="prose prose-lg prose-slate mx-auto dark:prose-invert prose-headings:scroll-mt-24 prose-headings:font-bold prose-headings:tracking-tight prose-h2:text-3xl prose-h3:text-2xl prose-h4:text-xl prose-p:leading-relaxed prose-a:font-semibold prose-a:text-blue-600 prose-a:no-underline hover:prose-a:text-blue-700 hover:prose-a:underline prose-strong:font-bold prose-strong:text-slate-900 dark:prose-strong:text-white prose-ul:list-disc prose-ol:list-decimal prose-li:my-2 prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-blockquote:bg-blue-50 prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:not-italic dark:prose-blockquote:bg-blue-950/30 prose-code:rounded prose-code:bg-slate-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:font-mono prose-code:text-sm prose-code:text-slate-900 dark:prose-code:bg-slate-800 dark:prose-code:text-slate-100 prose-pre:rounded-xl prose-pre:bg-slate-900 prose-pre:shadow-xl dark:prose-pre:bg-slate-950 prose-img:rounded-2xl prose-img:shadow-lg max-w-none">
        <div set:html={post.content} />
      </article>

      <!-- Author Bio Section -->
      <div class="mt-16 rounded-3xl border border-slate-200 bg-gradient-to-br from-slate-50 to-white p-8 shadow-lg dark:border-slate-800 dark:from-slate-900 dark:to-slate-950">
        <div class="flex items-start gap-6">
          <div class="flex-shrink-0">
            <div class="flex h-20 w-20 items-center justify-center rounded-full bg-blue-600 text-3xl font-bold text-white shadow-lg">
              {post.author.charAt(0)}
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white">Tentang Penulis</h3>
            <p class="mt-1 text-lg font-semibold text-slate-700 dark:text-slate-300">{post.author}</p>
            <p class="mt-3 leading-relaxed text-slate-600 dark:text-slate-400">
              Expert di bidang AI Custom dan transformasi digital. Berpengalaman membantu 100+ perusahaan mengimplementasikan solusi AI untuk meningkatkan efisiensi bisnis.
            </p>
            <a
              href="/contact/"
              class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-blue-600 transition hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
            >
              Hubungi untuk Konsultasi
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Social Share Section -->
      <div class="mt-12 border-t border-slate-200 pt-12 dark:border-slate-800">
        <h3 class="text-center text-lg font-semibold text-slate-900 dark:text-white">Bagikan Artikel Ini</h3>
        <div class="mt-6 flex flex-wrap justify-center gap-4">
          <a
            href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(canonicalUrl)}&text=${encodeURIComponent(post.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full bg-[#1DA1F2] px-6 py-3 font-semibold text-white shadow-lg transition hover:bg-[#1a8cd8]"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
            Twitter
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(canonicalUrl)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full bg-[#0A66C2] px-6 py-3 font-semibold text-white shadow-lg transition hover:bg-[#004182]"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            LinkedIn
          </a>
          <a
            href={`https://wa.me/?text=${encodeURIComponent(post.title + ' - ' + canonicalUrl)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full bg-[#25D366] px-6 py-3 font-semibold text-white shadow-lg transition hover:bg-[#20bd5a]"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
            WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Articles Section -->
  {relatedPosts.length > 0 && (
    <section class="border-t border-slate-200 bg-slate-50 py-16 dark:border-slate-800 dark:bg-slate-900/50 lg:py-24">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-12 text-center">
          <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white lg:text-4xl">
            Artikel Terkait
          </h2>
          <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
            Pelajari lebih lanjut tentang topik yang relevan
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {relatedPosts.map((relatedPost) => (
            <a
              href={blogHref(relatedPost.slug)}
              class="group flex h-full flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-lg transition hover:shadow-2xl hover:-translate-y-1 dark:border-slate-800 dark:bg-slate-900"
            >
              <div class="relative aspect-video overflow-hidden">
                <img
                  src={relatedPost.heroImage}
                  alt={relatedPost.title}
                  class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
                <span class="absolute bottom-4 left-4 rounded-full border border-white/20 bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-wider text-white backdrop-blur-sm">
                  {relatedPost.categoryLabel}
                </span>
              </div>
              <div class="flex flex-1 flex-col p-6">
                <h3 class="text-xl font-bold text-slate-900 transition group-hover:text-blue-600 dark:text-white dark:group-hover:text-blue-400">
                  {relatedPost.title}
                </h3>
                <p class="mt-3 line-clamp-3 flex-1 text-slate-600 dark:text-slate-400">
                  {relatedPost.excerpt}
                </p>
                <div class="mt-4 flex items-center gap-2 text-sm font-medium text-slate-500 dark:text-slate-400">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>{relatedPost.readTime}</span>
                </div>
              </div>
            </a>
          ))}
        </div>

        <!-- View All Articles CTA -->
        <div class="mt-12 text-center">
          <a
            href="/blog/"
            class="inline-flex items-center gap-2 rounded-full bg-slate-900 px-8 py-4 text-base font-semibold text-white shadow-lg transition hover:bg-slate-800 dark:bg-slate-700 dark:hover:bg-slate-600"
          >
            Lihat Semua Artikel
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="bg-gradient-to-br from-blue-600 to-blue-800 py-16 text-white lg:py-20">
    <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold lg:text-4xl">
        Siap Transformasi Bisnis Anda dengan AI?
      </h2>
      <p class="mt-4 text-lg text-blue-100">
        Konsultasikan kebutuhan AI custom Anda dengan tim expert kami. Dapatkan solusi yang tepat untuk bisnis Anda.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a
          href="/contact/"
          class="inline-flex items-center gap-2 rounded-full bg-white px-8 py-4 text-base font-semibold text-blue-600 shadow-xl transition hover:bg-blue-50"
        >
          Mulai Konsultasi Gratis
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a
          href="/service/"
          class="inline-flex items-center gap-2 rounded-full border-2 border-white px-8 py-4 text-base font-semibold text-white transition hover:bg-white/10"
        >
          Lihat Layanan Kami
        </a>
      </div>
    </div>
  </section>
</Layout>
