---
import Layout from '../../layouts/Layout.astro';

const categories = ['Strategy', 'Automation', 'Data & Analytics', 'Customer Experience', 'Governance', 'Talent'];

const posts = [
  {
    slug: 'operational-ai-strategy',
    title: 'Operational AI Strategy: Uniting Automation and Customer Experience',
    excerpt: 'A practical blueprint to orchestrate AI across operations without sacrificing customer experience or compliance.',
    category: 'Strategy',
    publishDate: 'Feb 12, 2024',
    readTime: '8 min read',
    author: 'Nadia Pramesti',
    heroImage: 'https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?auto=format&fit=crop&w=1600&q=80',
    thumbnailImage: 'https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?auto=format&fit=crop&w=900&q=80',
  },
  {
    slug: 'finance-automation-playbook',
    title: 'Finance Automation Playbook: Doubling SLA Speed with AI Co-pilots',
    excerpt: 'How finance teams automate reconciliation, document workflows, and approvals while keeping full governance.',
    category: 'Automation',
    publishDate: 'Jan 22, 2024',
    readTime: '6 min read',
    author: 'Nadia Pramesti',
    heroImage: 'https://images.unsplash.com/photo-1545239351-1141bd82e8a6?auto=format&fit=crop&w=1600&q=80',
    thumbnailImage: 'https://images.unsplash.com/photo-1545239351-1141bd82e8a6?auto=format&fit=crop&w=900&q=80',
  },
  {
    slug: 'cxo-ai-analytics-dashboards',
    title: '5 CXO Dashboards to Monitor AI Initiatives in Real Time',
    excerpt: 'Executive metrics that accelerate strategic decision-making for enterprise AI investments.',
    category: 'Data & Analytics',
    publishDate: 'Dec 18, 2023',
    readTime: '5 min read',
    author: 'Bayu Lazuardi',
    heroImage: 'https://images.unsplash.com/photo-1517433456452-f9633a875f6f?auto=format&fit=crop&w=1600&q=80',
    thumbnailImage: 'https://images.unsplash.com/photo-1517433456452-f9633a875f6f?auto=format&fit=crop&w=900&q=80',
  },
  {
    slug: 'scalable-chatbot-blueprint',
    title: 'Scalable Chatbot Blueprint for Premium Customer Journeys',
    excerpt: 'Frameworks for multilingual, multi-channel AI agents that keep responses consistent and on-brand.',
    category: 'Customer Experience',
    publishDate: 'Nov 5, 2023',
    readTime: '7 min read',
    author: 'Bayu Lazuardi',
    heroImage: 'https://images.unsplash.com/photo-1527430253228-e93688616381?auto=format&fit=crop&w=1600&q=80',
    thumbnailImage: 'https://images.unsplash.com/photo-1527430253228-e93688616381?auto=format&fit=crop&w=900&q=80',
  },
  {
    slug: 'ai-governance-checklist',
    title: 'AI Governance Checklist for Boards and Compliance Leaders',
    excerpt: 'A control list to keep AI programs transparent, auditable, and aligned with evolving regulations.',
    category: 'Governance',
    publishDate: 'Oct 17, 2023',
    readTime: '4 min read',
    author: 'Dion Hartono',
    heroImage: 'https://images.unsplash.com/photo-1483478550801-ceba5fe50e8e?auto=format&fit=crop&w=1600&q=80',
    thumbnailImage: 'https://images.unsplash.com/photo-1483478550801-ceba5fe50e8e?auto=format&fit=crop&w=900&q=80',
  },
  {
    slug: 'ai-talent-lab',
    title: 'AI Talent Lab: Building Multidisciplinary Teams Without the Drama',
    excerpt: 'Collaboration models across HR, product, and data so AI talent onboards within the first 30 days.',
    category: 'Talent',
    publishDate: 'Sep 26, 2023',
    readTime: '6 min read',
    author: 'Nadia Pramesti',
    heroImage: 'https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=1600&q=80',
    thumbnailImage: 'https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=900&q=80',
  },
  {
    slug: 'ai-operating-model',
    title: 'AI Operating Model that Connects Business and Technology',
    excerpt: 'A modular approach to align business units, technology teams, and centers of excellence around AI.',
    category: 'Strategy',
    publishDate: 'Aug 14, 2023',
    readTime: '5 min read',
    author: 'Dion Hartono',
    heroImage: 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=1600&q=80',
    thumbnailImage: 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=900&q=80',
  },
];

const featuredPost = posts[0];
const latestPosts = posts.slice(1, 7);

const blogHref = (slug) => `/blog/${slug}/`;
---
<Layout title="AI Automation Insights & Playbooks - my-aicustom.com">
  <section class="relative overflow-hidden bg-slate-950 text-white">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-900/80 to-slate-900/60"></div>
      <div class="absolute -top-48 right-0 h-[32rem] w-[32rem] rounded-full bg-sky-500/20 blur-3xl"></div>
    </div>
    <div class="relative mx-auto flex max-w-6xl flex-col gap-10 px-6 py-24 lg:flex-row lg:items-center lg:justify-between lg:py-32">
      <div class="max-w-2xl space-y-6">
        <span class="inline-flex items-center gap-2 rounded-full border border-white/20 px-5 py-2 text-sm font-semibold uppercase tracking-[0.35em]">
          <span class="h-2 w-2 rounded-full bg-sky-400"></span>
          AI Strategy Playbooks
        </span>
        <h1 class="text-4xl font-semibold leading-tight tracking-tight sm:text-5xl lg:text-6xl">
          AI automation, strategy, and governance for teams scaling with confidence
        </h1>
        <p class="text-lg text-slate-200">
          Field notes from enterprise engagements across Southeast Asia—covering operational design, governance, and the playbooks that move KPIs.
        </p>
      </div>
      <div class="grid w-full max-w-md gap-6 rounded-3xl border border-white/10 bg-white/5 p-8 backdrop-blur">
        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.35em] text-slate-300">What we cover</p>
          <ul class="mt-4 space-y-3 text-sm text-slate-200">
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-sky-400"></span>
              Automation blueprints, governance rituals, and change enablement.
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-sky-400"></span>
              Insights distilled from multi-market enterprise programs.
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-sky-400"></span>
              Templates and metrics to accelerate experiments and scale.
            </li>
          </ul>
        </div>
        <div class="rounded-2xl bg-white/10 p-5">
          <p class="text-sm text-slate-100">
            “The my-aicustom team helped us transform customer support in eight weeks. Their content turns that playbook into repeatable steps.”
          </p>
          <p class="mt-4 text-sm font-semibold text-white">— VP Operations, Enterprise Client</p>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-white py-14 dark:bg-slate-950">
    <div class="mx-auto flex max-w-5xl flex-wrap justify-center gap-3 px-6">
      {categories.map((category) => (
        <span class="rounded-full border border-slate-200 px-5 py-2 text-sm font-semibold text-slate-600 transition hover:border-sky-300 hover:text-sky-600 dark:border-slate-700 dark:text-slate-300 dark:hover:border-sky-500 dark:hover:text-sky-300">
          {category}
        </span>
      ))}
    </div>
  </section>

  <section class="bg-white py-16 dark:bg-slate-950">
    <div class="mx-auto grid max-w-6xl gap-12 px-6 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
      <div class="group relative overflow-hidden rounded-[2.5rem] border border-slate-100 shadow-[0_28px_90px_-40px_rgba(15,23,42,0.6)] transition-transform duration-500 hover:-translate-y-1 dark:border-slate-800/80 dark:bg-slate-900">
        <a href={blogHref(featuredPost.slug)} class="block">
          <img src={featuredPost.heroImage} alt={featuredPost.title} loading="lazy" class="h-full max-h-[32rem] w-full object-cover" />
        </a>
        <div class="absolute inset-0 bg-gradient-to-t from-slate-950/70 via-slate-900/20 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-8 text-white">
          <span class="inline-flex items-center rounded-full bg-white/10 px-4 py-1 text-xs font-semibold uppercase tracking-[0.35em] text-white/80">{featuredPost.category}</span>
          <h2 class="mt-4 text-3xl font-semibold leading-tight md:text-4xl">
            <a href={blogHref(featuredPost.slug)} class="transition-colors duration-300 hover:text-sky-300">{featuredPost.title}</a>
          </h2>
          <p class="mt-4 text-base text-slate-100 md:text-lg">{featuredPost.excerpt}</p>
          <div class="mt-6 flex flex-wrap items-center gap-4 text-xs font-semibold uppercase tracking-[0.3em] text-slate-200">
            <span>{featuredPost.publishDate}</span>
            <span aria-hidden="true" class="hidden h-1 w-1 rounded-full bg-slate-200 sm:inline"></span>
            <span>{featuredPost.readTime}</span>
          </div>
        </div>
      </div>
      <div class="space-y-6">
        <p class="text-sm font-semibold uppercase tracking-[0.35em] text-slate-500">Featured Story</p>
        <h3 class="text-3xl font-semibold text-slate-900 dark:text-white">Implementation blueprints you can plug into your next sprint.</h3>
        <p class="text-lg text-slate-600 dark:text-slate-300">
          We document the most effective lessons from enterprise programs—from architecture decisions to change enablement—so you can skip costly trial and error.
        </p>
        <div class="rounded-3xl border border-slate-100 bg-slate-50/60 p-8 dark:border-slate-800/70 dark:bg-slate-900">
          <p class="text-sm font-semibold uppercase tracking-[0.35em] text-slate-500">Highlights</p>
          <ul class="mt-4 space-y-3 text-sm text-slate-600 dark:text-slate-300">
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-sky-500"></span>
              Measuring automation impact on customer satisfaction and SLA.
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-sky-500"></span>
              Aligning business and technology stakeholders with crisp governance.
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-2 w-2 rounded-full bg-sky-500"></span>
              Prioritising the AI backlog using value-versus-complexity lenses.
            </li>
          </ul>
        </div>
        <a
          href={blogHref(featuredPost.slug)}
          class="inline-flex w-fit items-center gap-3 rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold uppercase tracking-[0.35em] text-white transition-colors duration-300 hover:bg-sky-600"
        >
          Read the full blueprint
          <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m-7-7 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <section class="bg-slate-50 py-20 dark:bg-slate-950/80">
    <div class="mx-auto grid max-w-6xl gap-10 px-6 lg:grid-cols-3">
      {latestPosts.map((post) => (
        <article class="flex h-full flex-col rounded-[2.25rem] border border-slate-100 bg-white p-6 shadow-[0_24px_80px_-45px_rgba(15,23,42,0.4)] transition-transform duration-500 hover:-translate-y-1 hover:shadow-[0_32px_90px_-45px_rgba(15,23,42,0.45)] dark:border-slate-800/80 dark:bg-slate-900">
          <a href={blogHref(post.slug)} class="relative block overflow-hidden rounded-[1.75rem]">
            <img
              src={post.heroImage}
              alt={post.title}
              loading="lazy"
              class="h-52 w-full object-cover transition-transform duration-500 hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-slate-950/60 via-slate-950/10 to-transparent"></div>
          </a>
          <div class="mt-6 flex flex-1 flex-col">
            <span class="inline-flex w-fit items-center rounded-full bg-sky-100 px-3 py-1 text-xs font-semibold uppercase tracking-[0.35em] text-sky-700 dark:bg-sky-500/20 dark:text-sky-200">
              {post.category}
            </span>
            <a href={blogHref(post.slug)} class="mt-4 text-2xl font-semibold leading-snug text-slate-900 transition-colors duration-300 hover:text-sky-600 dark:text-white">
              {post.title}
            </a>
            <p class="mt-3 flex-1 text-sm text-slate-600 dark:text-slate-300">{post.excerpt}</p>
            <div class="mt-6 flex items-center justify-between text-xs font-semibold uppercase tracking-[0.35em] text-slate-500">
              <span>{post.publishDate}</span>
              <span>{post.readTime}</span>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>
