---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import ServiceHero from '../components/service/ServiceHero.astro';
import ServicePackages from '../components/service/ServicePackages.astro';
import WorkflowSteps from '../components/service/WorkflowSteps.astro';

const konsultasiHref = '/konsultasi/';
const heroImage = 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1600&q=80';
---

<!-- Image inventory for this page:
  - Hero illustration: https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1600&q=80
  - Service card imagery: defined in src/data/servicePackages.ts
-->
<Layout title="Layanan AI Automation - my-aicustom.com">
  <ServiceHero
    heading="Layanan AI untuk Skalakan Operasional Bisnis Anda"
    subheading="Mulai dari otomasi proses hingga analitik prediktif, kami membantu mengimplementasikan AI yang memberikan dampak nyata."
    ctaLabel="Jadwalkan Konsultasi Gratis"
    ctaHref={konsultasiHref}
    imageSrc={heroImage}
    imageAlt="Ilustrasi profesional tim bisnis memanfaatkan AI untuk otomasi"
  />

  <ServicePackages />

  <WorkflowSteps />

  <CTA />
</Layout>
