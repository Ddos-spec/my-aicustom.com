
---
import Layout from '../../layouts/Layout.astro';
import { servicePages } from '../../data/serviceData';
import HeroSection from '../../components/services/HeroSection.astro';
import ProblemSection from '../../components/services/ProblemSection.astro';
import SolutionSection from '../../components/services/SolutionSection.astro';
import UseCasesSection from '../../components/services/UseCasesSection.astro';
import TechnicalSection from '../../components/services/TechnicalSection.astro';
import RoiSection from '../../components/services/RoiSection.astro';
import FaqSection from '../../components/services/FaqSection.astro';
import SuccessMetricsSection from '../../components/services/SuccessMetricsSection.astro';
import PricingSection from '../../components/services/PricingSection.astro';
import CTA from '../../components/CTA.astro';

export async function getStaticPaths() {
  return servicePages.map(service => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---
<Layout title={service.seo.title} description={service.seo.description} keywords={service.seo.keywords.join(', ')}>
  <HeroSection hero={service.hero} />
  <ProblemSection problem={service.problem} />
  <SolutionSection solution={service.solution} />
  <UseCasesSection useCases={service.useCases} />
  <TechnicalSection technical={service.technical} />
  <RoiSection roi={service.roi} />
  <FaqSection faq={service.faq} />
  <SuccessMetricsSection successMetrics={service.successMetrics} />
  <PricingSection pricing={service.pricing} />
  <CTA />
</Layout>
