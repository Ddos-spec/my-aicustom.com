---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hubungi Kami - my-aicustom.com">
  <!-- Hero Section -->
  <section class="relative bg-gray-800 text-white py-20 lg:py-32">
    <div class="absolute inset-0">
      <img src="https://images.unsplash.com/photo-1423666639041-f56000c27a9a?w=1200" alt="Contact Hero Image" class="w-full h-full object-cover opacity-20">
    </div>
    <div class="container mx-auto px-6 max-w-screen-xl relative z-10 text-center">
      <h1 class="text-4xl lg:text-5xl font-extrabold">Hubungi Kami</h1>
      <p class="mt-4 text-lg lg:text-xl">Kami siap membantu Anda menemukan solusi AI terbaik untuk bisnis Anda.</p>
    </div>
  </section>

  <!-- Contact Methods -->
  <section class="py-20 lg:py-24">
    <div class="container mx-auto px-6 max-w-screen-xl">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- WhatsApp Card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
          <img src="https://images.unsplash.com/photo-1611746872915-64382b5c76da?w=500" alt="WhatsApp" class="w-24 h-24 mx-auto mb-4 rounded-full">
          <h3 class="text-2xl font-bold text-center mb-2">WhatsApp (Respons Cepat)</h3>
          <p class="text-center text-gray-600 dark:text-gray-400 mb-6">Pilihan terbaik untuk konsultasi langsung dengan tim kami.</p>
          <a href="https://wa.me/6281234567890" target="_blank" class="block w-full text-center bg-green-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-600">
            Mulai Chat
          </a>
        </div>
        <!-- Email Card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
          <img src="https://images.unsplash.com/photo-1557200134-90327ee9fafa?w=500" alt="Email" class="w-24 h-24 mx-auto mb-4 rounded-full">
          <h3 class="text-2xl font-bold text-center mb-2">Email</h3>
          <p class="text-center text-gray-600 dark:text-gray-400 mb-6">Kirimkan pertanyaan atau proposal Anda melalui email.</p>
          <a href="mailto:info@my-aicustom.com" class="block w-full text-center bg-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-700">
            Kirim Email
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Business Hours -->
  <section class="bg-gray-50 dark:bg-gray-700 py-12">
    <div class="container mx-auto px-6 max-w-screen-xl text-center">
      <h3 class="text-2xl font-bold">Jam Kerja</h3>
      <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">Senin - Jumat, 09:00 - 17:00 WIB</p>
    </div>
  </section>
</Layout>
