---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const description = "my-aicustom.com adalah solusi AI untuk mengotomatiskan proses bisnis Anda, meningkatkan efisiensi, dan mendorong pertumbuhan.";
---

<!doctype html>
<html lang="id" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://my-aicustom.com/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://via.placeholder.com/1200x630.png?text=my-aicustom.com" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://my-aicustom.com/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="https://via.placeholder.com/1200x630.png?text=my-aicustom.com" />

		<!-- Schema.org markup for Google+ -->
		<script type="application/ld+json">
		{
		  "@context": "http://schema.org",
		  "@type": "Organization",
		  "name": "my-aicustom.com",
		  "url": "https://my-aicustom.com",
		  "logo": "https://via.placeholder.com/200x200.png?text=Logo",
		  "description": "Solusi AI untuk mengotomatiskan proses bisnis Anda, meningkatkan efisiensi, dan mendorong pertumbuhan.",
		  "contactPoint": {
		    "@type": "ContactPoint",
		    "email": "info@my-aicustom.com",
		    "contactType": "Customer Service"
		  }
		}
		</script>
		<style>
			/* Simple style for smooth scrolling */
			html {
				scroll-behavior: smooth;
			}
		</style>
	</head>
	<body class="bg-white text-gray-800 dark:bg-gray-900 dark:text-gray-200 pt-16">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>