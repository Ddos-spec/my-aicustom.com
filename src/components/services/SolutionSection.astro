
---
import type { ServicePage } from '../../types/service';

interface Props {
  solution: ServicePage['solution'];
}

const { solution } = Astro.props;
---
<section class="py-16 sm:py-20 bg-slate-50 dark:bg-slate-800">
  <div class="mx-auto max-w-4xl px-6">
    <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white text-center">
      {solution.title}
    </h2>
    <div class="mt-12 space-y-8">
      {solution.features.map(feature => (
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-sky-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-slate-900 dark:text-white">{feature.name}</h3>
            <p class="mt-2 text-base text-slate-600 dark:text-slate-300">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
