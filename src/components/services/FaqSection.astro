
---
import type { ServicePage } from '../../types/service';

interface Props {
  faq: ServicePage['faq'];
}

const { faq } = Astro.props;
---
<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-4xl px-6">
    <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white text-center">
      {faq.title}
    </h2>
    <div class="mt-12 space-y-8">
      {faq.questions.map(q => (
        <div>
          <h3 class="text-xl font-semibold text-slate-900 dark:text-white">{q.question}</h3>
          <p class="mt-2 text-base text-slate-600 dark:text-slate-300">{q.answer}</p>
        </div>
      ))}
    </div>
  </div>
</section>
