
---
import type { ServicePage } from '../../types/service';

interface Props {
  useCases: ServicePage['useCases'];
}

const { useCases } = Astro.props;
---
<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-4xl px-6">
    <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white text-center">
      {useCases.title}
    </h2>
    <div class="mt-12 space-y-6">
      {useCases.cases.map(useCase => (
        <div class="rounded-lg border border-slate-200 dark:border-slate-700 p-6">
          <h3 class="text-lg font-semibold text-sky-600 dark:text-sky-300">{useCase.industry}</h3>
          <p class="mt-2 text-base text-slate-700 dark:text-slate-300">{useCase.benefit}</p>
        </div>
      ))}
    </div>
  </div>
</section>
