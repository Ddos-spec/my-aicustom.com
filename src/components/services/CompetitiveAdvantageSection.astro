---
import type { ServicePage } from '../../types/service';

interface Props {
  competitiveAdvantage: ServicePage['competitiveAdvantage'];
}

const { competitiveAdvantage } = Astro.props;
if (!competitiveAdvantage) return null;
---

<section class="py-16 sm:py-20 bg-white dark:bg-slate-900">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">{competitiveAdvantage.title}</h2>
    </div>
    <div class="mt-12 grid gap-8 md:grid-cols-3">
      {competitiveAdvantage.advantages.map(advantage => (
        <div class="rounded-lg bg-gray-50 dark:bg-slate-800 p-6">
          <h3 class="text-xl font-semibold text-gray-800">{advantage.name}</h3>
          <p class="mt-4 text-gray-600">{advantage.description}</p>
        </div>
      ))}
    </div>
  </div>
</Section>
