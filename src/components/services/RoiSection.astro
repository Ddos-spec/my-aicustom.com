
---
import type { ServicePage } from '../../types/service';

interface Props {
  roi: ServicePage['roi'];
}

const { roi } = Astro.props;
---
{roi && (
  <section class="py-16 sm:py-20 bg-slate-50 dark:bg-slate-800">
    <div class="mx-auto max-w-4xl px-6">
      <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white text-center">
        {roi.title}
      </h2>
      <div class="mt-10 max-w-md mx-auto">
        <div>
          <label for="inquiry" class="block text-sm font-medium text-slate-700 dark:text-slate-300">
            {roi.inputLabel}
          </label>
          <div class="mt-1">
            <input type="number" name="inquiry" id="inquiry" class="block w-full rounded-md border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm" placeholder="100" />
          </div>
        </div>
        <div class="mt-6 text-center">
          <p class="text-lg text-slate-600 dark:text-slate-300">{roi.outputLabel}</p>
        </div>
      </div>
    </div>
  </section>
)}
