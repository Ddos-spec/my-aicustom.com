
---
import type { ServicePage } from '../../types/service';

interface Props {
  problem: ServicePage['problem'];
}

const { problem } = Astro.props;
---
<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-4xl px-6">
    <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white text-center">
      {problem.title}
    </h2>
    <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-8">
      {problem.points.map(point => (
        <div class="rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 p-6">
          <p class="text-lg text-slate-700 dark:text-slate-300">{point}</p>
        </div>
      ))}
    </div>
  </div>
</section>
