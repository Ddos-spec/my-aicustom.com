
---
import type { ServicePage } from '../../types/service';

interface Props {
  successMetrics: ServicePage['successMetrics'];
}

const { successMetrics } = Astro.props;
---
{successMetrics && (
  <section class="py-16 sm:py-20 bg-slate-50 dark:bg-slate-800">
    <div class="mx-auto max-w-4xl px-6">
      <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white text-center">
        {successMetrics.title}
      </h2>
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
        {successMetrics.metrics.map(metric => (
          <div>
            <p class="text-5xl font-bold text-sky-600 dark:text-sky-400">{metric.value}</p>
            <p class="mt-2 text-base text-slate-600 dark:text-slate-300">{metric.label}</p>
          </div>
        ))}
      </div>
      {successMetrics.caseStudy && (
        <div class="mt-16">
          <blockquote class="text-xl italic text-slate-700 dark:text-slate-300 text-center">
            "{successMetrics.caseStudy.quote}"
          </blockquote>
          <p class="mt-4 text-base text-slate-500 dark:text-slate-400 text-center">
            - {successMetrics.caseStudy.client}
          </p>
        </div>
      )}
    </div>
  </section>
)}
