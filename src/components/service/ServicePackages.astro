---
import { servicePackages } from '../../data/servicePackages';

const ensureHref = (path: string) => {
  const normalized = path.trim();
  const withLeadingSlash = normalized.startsWith('/') ? normalized : `/${normalized}`;
  return withLeadingSlash.endsWith('/') ? withLeadingSlash : `${withLeadingSlash}/`;
};
---

<!-- Image assets used are listed in src/data/servicePackages.ts -->
<section class="bg-white py-24 dark:bg-slate-950">
  <div class="mx-auto flex w-full max-w-6xl flex-col gap-16 px-6">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">Paket Layanan Kami</h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-300">
        Setiap solusi dirancang modular agar mudah disesuaikan dengan kebutuhan operasional dan industri Anda.
      </p>
    </div>
    <div class="grid gap-10 md:grid-cols-2 xl:grid-cols-3">
      {servicePackages.map((service) => (
        <article class="group flex h-full flex-col overflow-hidden rounded-3xl border border-slate-100/70 bg-white p-8 shadow-lg shadow-slate-900/5 transition hover:-translate-y-1 hover:shadow-2xl dark:border-slate-800/60 dark:bg-slate-900">
          <div class="relative overflow-hidden rounded-2xl">
            <img src={service.image} alt={service.imageAlt} loading="lazy" class="h-48 w-full object-cover transition duration-500 group-hover:scale-105" />
          </div>
          <h3 class="mt-6 text-2xl font-semibold text-slate-900 dark:text-white">{service.title}</h3>
          <p class="mt-3 text-base text-slate-600 dark:text-slate-300">{service.description}</p>
          <ul class="mt-5 space-y-2 text-sm text-slate-500 dark:text-slate-400">
            {service.features.map((feature) => (
              <li class="flex items-start gap-2">
                <span class="mt-1 h-1.5 w-1.5 flex-none rounded-full bg-sky-400"></span>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
          <a
            href={ensureHref(service.ctaHref)}
            class="mt-8 inline-flex items-center text-sm font-semibold text-sky-600 transition hover:text-sky-800 dark:text-sky-300 dark:hover:text-sky-200"
          >
            {service.ctaLabel}
            <svg class="ml-2 h-4 w-4" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
              <path d="M3.75 8a.75.75 0 0 1 .75-.75h5.69L8.72 5.78a.75.75 0 0 1 1.06-1.06l3 3a.75.75 0 0 1 0 1.06l-3 3a.75.75 0 0 1-1.06-1.06l1.47-1.47H4.5A.75.75 0 0 1 3.75 8z" />
            </svg>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
