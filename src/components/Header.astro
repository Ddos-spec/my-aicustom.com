---
// src/components/Header.astro
---
<header class="fixed top-0 left-0 w-full z-50 bg-white shadow-md dark:bg-gray-800">
  <nav class="container mx-auto px-6 py-3 max-w-screen-xl">
    <div class="flex items-center justify-between">
      <div class="text-xl font-semibold text-gray-700">
        <a href="/" class="text-gray-800 dark:text-white hover:text-blue-500 dark:hover:text-blue-400">my-aicustom.com</a>
      </div>
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-gray-600 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400">Home</a>
        <a href="/service" class="text-gray-600 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400">Service</a>
        <a href="/blog" class="text-gray-600 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400">Blog</a>
        <a href="/contact" class="text-gray-600 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400">Contact</a>
        <a href="https://wa.me/6281234567890" target="_blank" class="px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700">Konsultasi Gratis</a>
      </div>
      <div class="md:hidden">
        <button id="hamburger" class="text-gray-600 dark:text-gray-300 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4">
      <a href="/" class="block py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700">Home</a>
      <a href="/service" class="block py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700">Service</a>
      <a href="/blog" class="block py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700">Blog</a>
      <a href="/contact" class="block py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700">Contact</a>
      <a href="https://wa.me/6281234567890" target="_blank" class="block py-2 mt-2 text-center text-white bg-blue-600 rounded-md hover:bg-blue-700">Konsultasi Gratis</a>
    </div>
  </nav>
</header>
<script>
  document.getElementById('hamburger')?.addEventListener('click', function() {
    const mobileMenu = document.getElementById('mobile-menu');
    if (mobileMenu) {
      mobileMenu.classList.toggle('hidden');
    }
  });
</script>
