---
import type { BlogPostMeta } from '../../data/blogPosts';
import BlogCard from './BlogCard.astro';

interface Props {
  title: string;
  description: string;
  posts: BlogPostMeta[];
}

const { title, description, posts } = Astro.props;
---
<!-- Latest Articles Section -->
<section class="bg-slate-50 py-20 dark:bg-slate-950">
  <div class="mx-auto flex max-w-6xl flex-col gap-12 px-6">
    <div class="flex flex-col gap-6 lg:flex-row lg:items-end lg:justify-between">
      <div class="max-w-2xl">
        <h2 class="text-3xl font-semibold leading-tight text-slate-900 dark:text-white sm:text-4xl">{title}</h2>
        <p class="mt-4 text-lg text-slate-600 dark:text-slate-300">{description}</p>
      </div>
      <div class="flex flex-wrap gap-3 text-sm font-semibold uppercase tracking-widest text-slate-500">
        <span>Strategy</span>
        <span class="text-slate-400">/</span>
        <span>Automation</span>
        <span class="text-slate-400">/</span>
        <span>Data & Analytics</span>
      </div>
    </div>
    <div class="grid gap-10 md:grid-cols-2 xl:grid-cols-3">
      {posts.map((post) => (
        <BlogCard post={post} />
      ))}
    </div>
  </div>
</section>
