---
import type { BlogPostMeta } from '../../data/blogPosts';
import BlogCard from './BlogCard.astro';

interface Props {
  posts: BlogPostMeta[];
}

const { posts } = Astro.props;
---
<!-- Related Articles Section -->
<section class="bg-slate-50 py-20 dark:bg-slate-950">
  <div class="mx-auto flex max-w-6xl flex-col gap-12 px-6">
    <div class="text-center">
      <p class="text-sm font-semibold uppercase tracking-[0.35em] text-slate-500">Artikel Terkait</p>
      <h2 class="mt-4 text-3xl font-semibold text-slate-900 dark:text-white">Baca juga insight lainnya</h2>
      <p class="mt-3 text-lg text-slate-600 dark:text-slate-300">
        Kurasi artikel yang melengkapi strategi implementasi AI Anda.
      </p>
    </div>
    <div class="grid gap-8 md:grid-cols-2 xl:grid-cols-3">
      {posts.map((post) => (
        <BlogCard post={post} variant="compact" />
      ))}
    </div>
  </div>
</section>
