---
import { withBase } from '../../utils/paths';
import type { BlogPostMeta } from '../../data/blogPosts';
import CategoryPill from './CategoryPill.astro';

interface Props {
  post: BlogPostMeta;
  variant?: 'default' | 'compact';
}

const { post, variant = 'default' } = Astro.props;
const href = withBase(`blog/${post.slug}/`);
const isCompact = variant === 'compact';
---
<!-- Blog Card -->
<article
  class={`group relative flex h-full flex-col overflow-hidden rounded-3xl border border-slate-100 bg-white shadow-[0_20px_60px_-30px_rgba(15,23,42,0.45)] transition-all duration-500 hover:-translate-y-1 hover:shadow-[0_32px_80px_-32px_rgba(15,23,42,0.6)] dark:border-slate-800/80 dark:bg-slate-900`}
>
  <a href={href} class="relative block overflow-hidden">
    <img
      src={post.thumbnailImage}
      alt={post.title}
      loading="lazy"
      class={`h-60 w-full object-cover transition-transform duration-500 group-hover:scale-105 ${
        isCompact ? 'md:h-40 lg:h-36' : ''
      }`}
    />
    <div class="absolute inset-0 bg-gradient-to-t from-slate-950/60 via-slate-950/10 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"></div>
  </a>
  <div class={`flex flex-1 flex-col px-6 ${isCompact ? 'pb-6 pt-6' : 'pb-8 pt-7'}`}>
    <CategoryPill label={post.categoryLabel} variant={post.category} size="sm" />
    <a href={href} class="mt-4 text-2xl font-semibold leading-snug text-slate-900 transition-colors duration-300 hover:text-sky-600 dark:text-white">
      {post.title}
    </a>
    <p class={`mt-3 text-sm text-slate-600 dark:text-slate-300 ${isCompact ? 'line-clamp-3' : 'line-clamp-4'}`}>
      {post.excerpt}
    </p>
    <div class="mt-6 flex items-center justify-between text-xs font-semibold uppercase tracking-widest text-slate-500">
      <span>{post.readTime}</span>
      <a href={href} class="inline-flex items-center gap-2 text-sky-600 transition-colors duration-300 hover:text-sky-500">
        Baca selengkapnya
        <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m-7-7 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</article>
